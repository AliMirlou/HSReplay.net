{
	"extends": [
		"tslint:recommended",
		"tslint-react"
	],
	"rules": {
		"indent": [
			true,
			"tabs"
		],
		"interface-name": [
			true,
			"never-prefix"
		],
		"import-spacing": true,
		"jsx-curly-spacing": [
			true,
			"never"

		],
		"jsx-no-lambda": false,
		"jsx-no-multiline-js": false,
		"jsx-wrap-multiline": false,
		"member-access": false,
		"member-ordering": false,
		"no-require-imports": true,
		"no-string-literal": false,
		"no-unused-expression": [
			true,
			"allow-fast-null-checks"
		],
		"no-unused-variable": [
			true,
			"react"
		],
		"ordered-imports": [
			true,
			{
				"import-sources-order": "any",
				"named-imports-order": "case-insensitive"
			}
		],
		"one-line": [
			true,
			"check-open-brace",
			"check-whitespace"
		],
		"switch-default": false,
		"variable-name": [
			true,
			"check-format",
			"allow-leading-underscore",
			"ban-keywords"
		]
	}
}
